generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}

model User {
  id                      String                @id @default(uuid())
  username                String                @unique
  sub                     String                @default("")
  name                    String?       
  bio                     String?       
  role                    UserRole              @default(BUYER)
  lastRole                UserRole              @default(BUYER)
  profilePicture          String                @default("https://firebasestorage.googleapis.com/v0/b/chatapp-4deee.appspot.com/o/ProfilePics%2Fdefault-pic.jpg?alt=media&token=53c51d35-079f-4e2e-addc-c6b40cfe8630")        
  password                String?       
  provider                Provider?        
  sellerProfile           SellerProfile?        
  orders                  Order[]               @relation("BuyerOrders")
  reviews                 Review[]            
}         

model SellerProfile {         
  id                      String                @id @default(uuid())
  userId                  String                @unique
  name                    String
  description             String      
  course                  String?
  institute               String?  
  startDate               Int?
  endDate                 Int?
  wallet                  String?       
  phoneNumber             String?    
  website                 String?         
  profilePicture          String                @default("https://firebasestorage.googleapis.com/v0/b/chatapp-4deee.appspot.com/o/ProfilePics%2Fdefault-pic.jpg?alt=media&token=53c51d35-079f-4e2e-addc-c6b40cfe8630")              
  subNiche                SubNiche[]            
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt @default(now())
  gigs                    Gig[]           
  orders                  Order[]               @relation("SellerOrders")
  user                    User                  @relation(fields: [userId], references: [id])
}                    
model Gig {             
  id                      String                @id @default(uuid())
  sellerId                String        
  title                   String        
  description             String
  picture                 String?
  status                  GigStatus             @default(ACTIVE)                
  category                Category        
  niche                   Niche       
  subNiche                SubNiche      
  tags                    String[]              
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  pricing                 PricingPackage[]      
  seller                  SellerProfile         @relation(fields: [sellerId], references: [id])
  orders                  Order[]       
}         
model PricingPackage {          
  id                      String                @id @default(uuid())
  gigId                   String          
  name                    String          
  description             String          
  price                   Float         
  deliveryTime            Int        //in days 
  features                String[]          
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  gig                     Gig                   @relation(fields: [gigId], references: [id])
  orders                  Order[]         
}         
model Order {    
  id                      String                @id @default(uuid())
  packageId               String        
  gigId                   String
  quantity                Int                   @default(1)       
  buyerId                 String        
  sellerId                String        
  status                  OrderStatus           @default(PENDING)
  paymentStatus           PaymentStatus         @default(PENDING)
  amount                  Float       
  deadline                DateTime        
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  dispute                 Dispute?        
  gig                     Gig                   @relation(fields: [gigId], references: [id])
  buyer                   User                  @relation("BuyerOrders", fields: [buyerId], references: [id])
  seller                  SellerProfile         @relation("SellerOrders", fields: [sellerId], references: [id])
  package                 PricingPackage        @relation(fields: [packageId], references: [id])
  review                  Review?       
  transactions            Transaction[]       
  escrow                  Escrow? 
}
model Escrow {
  id                      String                @id @default(uuid())
  orderId                 String                @unique
  address                 String                @unique
  client                  String                
  receiver                String
  amount                  Float
  status                  EscrowStatus          @default(PENDING)
  sentTo                  EscrowUsers? 
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  resolvedAt              DateTime?
  transactionId           String
  order                   Order                 @relation(fields: [orderId], references: [id])
}
model Dispute {
  id                      String                @id @default(uuid())
  orderId                 String                @unique
  disputedBy              String                  
  reason                  String
  resolution              DisputeResolutions    @default(PENDING)
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  order                   Order                 @relation(fields: [orderId], references: [id])
}
model Review {
  id                      String                @id @default(uuid())
  orderId                 String                @unique
  order                   Order                 @relation(fields: [orderId], references: [id])
  reviewerId              String            
  reviewer                User                  @relation(fields: [reviewerId], references: [id])
  rating                  Int           
  comment                 String?           
  createdAt               DateTime              @default(now())
}
model Transaction {
  id                      String                @id @default(uuid())
  orderId                 String    
  fromAddress             String    
  toAddress               String    
  currency                String    
  txHash                  String                @unique
  status                  String    
  order                   Order                 @relation(fields: [orderId], references: [id])
  purpose                 TransactionPurpose    
  createdAt               DateTime              @default(now())
}
enum EscrowStatus {
  PENDING
  COMPLETED
  DISPUTED
  RESOLVED
}
enum GigStatus {
  ACTIVE
  DISCARDED
}
